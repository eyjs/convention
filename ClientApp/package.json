    "@vueup/vue-quill": "^1.2.0",
    "@vueuse/core": "^10.4.1",
    "axios": "^1.5.0",
    "date-fns": "^2.30.0",
    "dayjs": "^1.11.18",
    "lucide-vue-next": "^0.279.0",
    "pinia": "^2.1.6",
    "quill": "^2.0.2",
    "quill-blot-formatter": "^1.0.5",
    "v-viewer": "^3.0.22",
    "viewerjs": "^1.11.7",
    "vue": "^3.3.4",
    "vue-router": "^4.2.4"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.19",
    "@vitejs/plugin-vue": "^4.3.4",
    "autoprefixer": "^10.4.15",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "postcss": "^8.4.29",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.1",
    "tailwindcss": "^3.3.3",
    "terser": "^5.44.0",
    "vite": "^4.4.9"
