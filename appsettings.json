{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "LocalRAG": "Information"
    }
  },
  "AllowedHosts": "*",
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:5173"
    ]
  },
  "JwtSettings": {
    "SecretKey": "your-super-secret-key-min-32-characters-long-for-security",
    "Issuer": "ConventionAPI",
    "Audience": "ConventionApp",
    "AccessTokenExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=startour;Integrated Security=true;TrustServerCertificate=true;"
  },
  "LlmSettings": {
    "Provider": "llama3",
    "Llama3": {
      "BaseUrl": "http://localhost:11434",
      "Model": "llama3",
      "Temperature": 0.3, // RAG에 적합한 낮은 값
      "TopP": 0.9
    },
    "Gemini": {
      "BaseUrl": "https://generativelanguage.googleapis.com/v1beta",
      "ApiKey": "AIzaSyD5f4FAEH3EvVKWCJVzLH-ob4j9bC8M5sw",
      "Model": "gemini-2.0-flash"
    }
  },
  "EmbeddingSettings": {
    "UseOnnx": true,
    "ModelPath": "models/all-MiniLM-L6-v2.onnx",
    "Dimensions": 384
  },
  "RagSettings": {
    "DefaultTopK": 5,
    "MaxDocumentLength": 10000,
    "ChunkSize": 500,
    "ChunkOverlap": 50,
    "AutoIndexing": {
      "Enabled": true,
      "IndexConventions": true,
      "IndexGuests": true,
      "IndexSchedules": true
    }
  },
  "PerformanceSettings": {
    "MaxConcurrentRequests": 10,
    "RequestTimeoutSeconds": 30,
    "EmbeddingCacheSize": 1000
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:5000"
      }
    }
  }
}
